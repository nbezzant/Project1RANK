@model Project1RANK.Models.Mission

@{
    ViewBag.Title = "ChooseMission";
}

<h2>Choose Mission</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Choose a mission to view.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Mission_ID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Mission_ID, new SelectList(ViewBag.Missions, "Mission_ID", "Mission_Name"))
                @Html.ValidationMessageFor(model => model.Mission_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Go" class="btn btn-default" />
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Home", "../Home/Index")
    </p>
}