    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-10">
                    <h4>To Comment:</h4>
                    <h6>Enter Name: </h6>
                    @Html.TextBoxFor(model => model.aName)
                    <br />
                    <h6>Enter Comment: </h6>
                    @Html.TextBoxFor(model => model.aComment)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Leave Comment" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    @foreach (var New_Reply in Model.myComments)
