@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h2>Leave a question below:</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <!-- @Html.LabelFor(model => model.Mission_Name, htmlAttributes: new { @class = "control-label col-md-2" })-->
            <div class="col-md-10">
                @Html.TextBox("MissionQuestion", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Mission_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input value="Submit Question" class="btn btn-default" />
            </div>
        </div>
    </div>
    <center>
        <p>
            <input type="button" class="btn btn-info btn-lg" value="Choose Another Mission" onclick="location.href='@Url.Action("ChooseMission", "Missions")'" />   
            <input type="button" class="btn btn-info btn-lg" value="Home" onclick="location.href='@Url.Action("Index", "Home")'" />
        </p>
    </center>
}
